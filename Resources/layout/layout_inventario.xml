<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
      <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventario Fisico"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"/>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/relativeLayouts1">
        
        <TextView
            android:id="@+id/textViewUbicaI"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ubicacion:"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextUbicacionI"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/textViewUbicaI"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        <ImageView
            android:src="@drawable/teclado"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewTecladoI"
            android:layout_toRightOf="@+id/editTextUbicacionI"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp" />
         <TextView
            android:id="@+id/textViewMsgI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion No Capturadas"
            android:layout_below="@+id/textViewUbicaI"
            android:layout_marginTop="15dp"/>
     </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayouts2">
        
        <TextView
            android:text="UBICACION = ID_UBICA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInv"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"/>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewInv"
            android:scrollbars="vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts3">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup1"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:checked="true"
                android:text="Toma 1"/>
            <RadioButton
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:text="Toma 2"/>
            <RadioButton
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:text="Toma 3"/>
        </RadioGroup>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicial"
            android:layout_marginTop="40dp"
            android:id="@+id/checkBoxInicial"
            android:checked="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts4">
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarInv"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
        
     </RelativeLayout>   
</LinearLayout>
