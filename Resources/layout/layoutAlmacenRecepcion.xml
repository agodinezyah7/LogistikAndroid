<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Almacen Recepcion"
        android:textColor="#ff303f9f"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="60px"
        android:textStyle="bold"/>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/relativeLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOC"
            android:text="Orden de Compra:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:id="@+id/editTextOrdComp"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textViewOC"
            android:layout_alignBottom="@id/textViewOC"
            android:layout_alignRight="@id/textViewOC"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textColor="#ffffffff" 
            android:digits="0123456789."
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="Embarque:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textViewOC"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextEmbarque"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView2"
            android:layout_alignBottom="@id/textView2"
            android:layout_alignRight="@id/textView2"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:textColor="@android:color/background_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:text="Factura:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFactura"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView33"
            android:layout_alignBottom="@id/textView33"
            android:layout_alignRight="@id/textView33"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:textColor="@android:color/background_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:text="Contenido:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textView33"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/editTextContenido"
            android:background="#ff283593"
            android:maxLines="5"
            android:singleLine="false"
            android:layout_below="@id/textView44"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:textColor="@android:color/background_light"/>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="1dp"
        android:gravity="center">
        <Button
            android:id="@+id/ButtonRegresarAlmRec"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginRight="20dp"
            android:background="#ff2196f3"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonGuardarAlmRec"
            android:layout_toRightOf="@id/ButtonRegresarAlmRec"
            android:text="Guardar"
            android:background="#ff2196f3"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />
    </RelativeLayout></LinearLayout>
