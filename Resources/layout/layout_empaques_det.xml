<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
              android:orientation="vertical" 
              android:layout_width="match_parent" 
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/textViewTituloED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empaques Detalle"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"/> 
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/relativeLayouts00">
         <TextView
                android:id="@+id/textViewPedido"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Pedido:  xxx"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
         <TextView
                android:id="@+id/textViewCaja"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Caja:"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/textViewPedido"
                android:textStyle="bold"/>
         <EditText
            android:id="@+id/editTextCajaED"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
             android:imeOptions="actionNext"
            android:layout_below="@+id/textViewTituloED"
            android:layout_toRightOf="@+id/textViewCaja"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" /> 
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayouts1">
        
        <TextView
            android:id="@+id/textViewNoCaja"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Empaque:"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:id="@+id/spinnerEmpaqueD"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewNoCaja"/>
        
        <ImageView
            android:src="@drawable/teclado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/imageViewTecladoED"
            android:layout_toRightOf="@id/spinnerEmpaqueD"
            android:layout_marginLeft="230dp"/>
        
        <TextView
            android:id="@+id/textViewCodED"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="CÃ³digo"
            android:layout_below="@+id/spinnerEmpaqueD"
            android:layout_marginTop="10dp"/>
         <EditText
            android:id="@+id/editTextCodED"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
             android:imeOptions="actionNext"
            android:layout_below="@+id/spinnerEmpaqueD"
            android:layout_toRightOf="@+id/textViewCodED"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        
        <TextView
            android:id="@+id/textView104ED"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_below="@+id/editTextCodED"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextCantED"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
             android:imeOptions="actionNext"
            android:layout_below="@+id/editTextCodED"
            android:layout_toRightOf="@+id/textView104ED"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
         <TextView
            android:id="@+id/textView1000ED"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:layout_below="@+id/editTextCodED"
            android:layout_toRightOf="@+id/editTextCantED"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextPesoED"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
             android:imeOptions="actionNext"
            android:layout_below="@+id/editTextCodED"
            android:layout_toRightOf="@+id/textView1000ED"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />   
        
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayouts2">
        
        <TextView
            android:text="CODIGO = DESCRIPCION = CANTIDAD_REC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView105S"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"/>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewPacking"
            android:scrollbars="vertical"/>
    </RelativeLayout>
    
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts4">
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarSalida"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
        <ImageButton
                    android:src="@drawable/inventario_normal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnReporteED"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnRegresarSalida"
                    android:layout_toRightOf="@id/imgbtnRegresarSalida"
                    android:gravity="center" />
        <ImageButton
                    android:src="@drawable/guardar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnGuardarEmpaque"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/imgbtnReporteED"
                    android:layout_toRightOf="@+id/imgbtnReporteED" />
        
     </RelativeLayout>   
</LinearLayout>
