<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/relativeLayouts1">
        
        <TextView
            android:id="@+id/textViewTarimaID"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Tarima"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextTarimaID"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/textViewTarimaID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        
        <TextView
            android:id="@+id/textView101ID"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:layout_below="@+id/textViewTarimaID"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextCodID"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@+id/editTextTarimaID"
            android:layout_toRightOf="@+id/textView101ID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        
        <ImageView
            android:src="@drawable/teclado"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewTecladoCV"
            android:layout_below="@+id/textViewTarimaCV"
            android:layout_toRightOf="@+id/editTextCodID"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp" />
        
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayouts2">
        
        <TextView
            android:text="Clave_Iin = Codigo = Tarima = CantO = Descrip = Embarque = OC = Factura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewMsgID"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"/>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewInvDet"
            android:scrollbars="vertical"/>
    </RelativeLayout>
     
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts4">
        <Button
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:text="Aceptar"
                    android:id="@+id/btnAceptar"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarID"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/btnAceptar"
                    android:layout_toRightOf="@+id/btnAceptar"
                    android:gravity="center" />
        <Button
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:text="Cerrar Ubicacion"
                    android:id="@+id/btnCerrarUbicacion"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/imgbtnRegresarID"
                    android:layout_toRightOf="@+id/imgbtnRegresarID" />
        
     </RelativeLayout>  
</LinearLayout>



