<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
              android:orientation="vertical" 
              android:layout_width="match_parent" 
              android:layout_height="match_parent">

     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relativeLayouts1">
      
         <TextView
            android:id="@+id/textViewIPc"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="IP Server:"
            android:textColor="#ff303f9f"
             android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextIPServer"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:layout_toRightOf="@+id/textViewIPc"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff" />
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPuerto"
            android:text="Puerto:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textViewIPc"
            android:layout_marginTop="15dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPuerto"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_toRightOf="@+id/textViewPuerto"
            android:layout_below="@+id/editTextIPServer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:imeOptions="actionNext"
            android:textColor="#ffffffff"/>

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBD"
            android:text="Base de Datos:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textViewPuerto"
            android:layout_marginTop="15dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBD"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_toRightOf="@+id/textViewBD"
            android:layout_below="@+id/editTextPuerto"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:imeOptions="actionNext"
            android:textColor="#ffffffff"/>
        
         <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUsuario"
            android:text="Usuario:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textViewBD"
            android:layout_marginTop="15dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUser"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_toRightOf="@+id/textViewUsuario"
            android:layout_below="@+id/editTextBD"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:imeOptions="actionNext"
            android:textColor="#ffffffff"/>
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPass"
            android:text="Password:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textViewUsuario"
            android:layout_marginTop="15dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPass"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_toRightOf="@+id/textViewPass"
            android:layout_below="@+id/editTextUser"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:imeOptions="actionNext"
            android:textColor="#ffffffff"/>
    </RelativeLayout>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relativeLayout1">
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarConfig"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
                <ImageButton
                    android:src="@drawable/guardar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnsaveConfig"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/imgbtnRegresarConfig"
                    android:layout_toRightOf="@+id/imgbtnRegresarConfig"
                    android:gravity="center" />
                <Button
                    android:text="probar conexion"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btnProbarConexion"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/imgbtnsaveConfig"
                    android:layout_toRightOf="@+id/imgbtnsaveConfig" />
    </RelativeLayout>
</LinearLayout>
