<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/relativeLayout1">
        
        <TextView
            android:id="@+id/textView100"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Motivo"/>
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView100"/>
        
        <TextView
            android:id="@+id/textView101"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Ubica"
            android:layout_below="@id/textView100"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/editTextUbicaE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:layout_below="@id/spinner1"
            android:layout_toRightOf="@id/textView101"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffffff"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/textView102"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Tarima"
            android:layout_below="@id/spinner1"
            android:layout_toRightOf="@id/editTextUbicaE"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/editTextTarimaE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:layout_below="@id/spinner1"
            android:layout_toRightOf="@id/textView102"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff"
            android:visibility="invisible"/>
        
        <TextView
            android:id="@+id/textView103"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="CÃ³digo"
            android:layout_below="@id/textView102"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextCodE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/editTextUbicaE"
            android:layout_toRightOf="@id/textView103"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        <ImageView
            android:src="@drawable/teclado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView1"
            android:layout_below="@id/editTextUbicaE"
            android:layout_toRightOf="@id/editTextCodE"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/textView104"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_below="@id/textView103"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextCantE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/editTextCodE"
            android:layout_toRightOf="@id/textView104"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout2">
        
        <TextView
            android:text="CODIGO = CANTIDAD = DESCRIPCION"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView105"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"/>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:id="@+id/listViewEntrada"
            android:scrollbars="vertical"/>
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout3">
         <TextView
            android:id="@+id/textView106"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Comentario"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextComentario"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:layout_below="@+id/textView106"
            android:lines="3"
            android:textColor="#ffffffff" />
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayout32">
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarEntrada"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
        <ImageButton
                    android:src="@drawable/inventario_normal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnsave"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@+id/imgbtnRegresarEntrada"
                    android:layout_toRightOf="@+id/imgbtnRegresarEntrada"
                    android:gravity="center"
                    android:visibility="invisible"/>
        <ImageButton
                    android:src="@drawable/guardar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnGuardarEntrada"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnsave"
                    android:layout_toRightOf="@id/imgbtnsave" />
        
     </RelativeLayout>   
</LinearLayout>

