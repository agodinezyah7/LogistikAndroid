<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Captura de Compra"
        android:textColor="#ff303f9f"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="60px"
        android:textStyle="bold"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/butCodigoCant"
            android:layout_marginLeft="120dp"
            android:text="Codigo/Cantidad"
            android:background="#ff2196f3"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewUltLeido"
            android:text="Ultimo leido:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#1E000000"
            android:id="@+id/editTextUltimoRead"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textViewUltLeido"
            android:layout_alignBottom="@id/textViewUltLeido"
            android:layout_alignRight="@id/textViewUltLeido"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="Codigo:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textViewUltLeido"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCodigoCompras"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView2"
            android:layout_alignBottom="@id/textView2"
            android:layout_alignRight="@id/textView2"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:textColor="#ffffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:text="Descripcion:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDescCompras"
            android:background="#1E000000"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView33"
            android:layout_alignBottom="@id/textView33"
            android:layout_alignRight="@id/textView33"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:text="Cantidad:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textView33"
            android:layout_marginTop="10dp" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCantCompras"
            android:background="#ff283593"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView44"
            android:layout_alignBottom="@id/textView44"
            android:layout_alignRight="@id/textView44"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"
            android:digits="0123456789."
            android:visibility="visible"
            android:textColor="@android:color/background_light"/>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView55"
            android:text="Orden de Compra:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textView44"
            android:layout_marginTop="10dp" />
          <EditText
            android:inputType="textPersonName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextOrdComp"
            android:background= "#1E000000"
            android:maxLength="20"
            android:layout_alignBaseline="@id/textView55"
            android:layout_alignBottom="@id/textView55"
            android:layout_alignRight="@id/textView55"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView66"
            android:text="Cantidad Pedida:"
            android:textColor="#ff303f9f"
            android:textSize="30px"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/textView55"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCodCant"
            android:background= "#1E000000"
            android:maxLength="20"
            android:layout_alignBaseline="@+id/textView66"
            android:layout_alignBottom="@+id/textView66"
            android:layout_alignRight="@+id/textView66"
            android:layout_marginRight="20dp"
            android:imeOptions="actionNext"/>
    </RelativeLayout>
 <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relativeLayout144"
        android:gravity="center">
        <Button
            android:id="@+id/butRegCapComp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:layout_marginRight="20dp"
            android:background="#ff2196f3"
            android:paddingTop="5dp" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonGuardarCapComp"
            android:layout_toRightOf="@id/butRegCapComp"
            android:text="Guardar"
            android:background="#ff2196f3"
            android:paddingTop="5dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ComboBox_ubicacion"
            android:layout_below="@+id/butRegCapComp"
            android:visibility="invisible"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:id="@+id/TextBox_no_parte"
            android:background= "#1E000000"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ComboBox_ubicacion"
            android:imeOptions="actionNext"
             android:visibility="invisible"/>
        	<RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myRadioGroup"
            android:layout_below="@+id/TextBox_no_parte">
            <RadioButton
                android:id="@+id/RadioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N"
                android:padding="5dp"
            android:visibility="invisible"/>
            <RadioButton
                android:id="@+id/RadioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lbs"
                android:padding="5dp"
            android:visibility="invisible"/>
            <RadioButton
                android:id="@+id/RadioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kgs"
                android:padding="5dp"
            android:visibility="invisible"/>
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>

