<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <TextView
            android:text="DETALLE ORDENES DE COMPRA"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textViewTitulo"
            android:textColor="#DF7401"
            android:layout_marginLeft="90dp"/>
    <TextView
            android:text="Orden de Compra:"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:id="@+id/textViewOC"
            android:textStyle="bold"
            android:layout_marginLeft="90dp"/>
    <ScrollView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView1"
            android:padding="5dp">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:id="@+id/relativeLayout1">
                <TextView
                    android:text="Codigo:"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:id="@+id/textViewcodigo"
                    android:layout_below="@id/textViewTitulo"
                    android:textColor="#ff303f9f"
                    android:textSize="30px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp" />
                <EditText
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:background="#ff303f9f"
                    android:id="@+id/editTextCodigo"
                    android:maxLength="20"
                    android:layout_toRightOf="@id/textViewcodigo"
                    android:layout_below="@id/textViewTitulo"
                    android:layout_marginTop="10dp"
                    android:textColor="#ffffffff" 
                    android:inputType="phone"/>
                <ImageButton
                    android:src="@drawable/teclado"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imgbtnteclado"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/editTextCodigo"
                    android:layout_toRightOf="@id/editTextCodigo" />
                    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> 
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_marginTop="34dp"
                android:id="@+id/relativeLayout2">
                <TextView
                        android:text="Cant Rec. = Cant. Ped. = Codigo = Descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:textColor="#0000FF"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"/>
                <ListView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/listViewDetalle"
                    android:scrollbars="vertical | horizontal"/>
                <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="380dp"
                android:id="@+id/relativeLayout3">
                <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresar"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
                <ImageButton
                    android:src="@drawable/guardar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnsave"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnRegresar"
                    android:layout_toRightOf="@id/imgbtnRegresar"
                    android:gravity="center" />
                <ImageButton
                    android:src="@drawable/siguiente_normal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnsiguiente"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnsave"
                    android:layout_toRightOf="@id/imgbtnsave" />
             </RelativeLayout>
            </RelativeLayout>
            </HorizontalScrollView>
             </RelativeLayout>
           
    </ScrollView>
</LinearLayout>
