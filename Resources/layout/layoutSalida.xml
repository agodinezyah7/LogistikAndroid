<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:id="@+id/relativeLayouts1">
        
        <TextView
            android:id="@+id/textView100S"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Motivo"/>
        <Spinner
            android:id="@+id/spinner1S"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textView100S"/>
        
        <TextView
            android:id="@+id/textView101S"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Ubica"
            android:layout_below="@id/textView100S"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextUbicaS"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/spinner1S"
            android:layout_toRightOf="@id/textView101S"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffffff" />
        <TextView
            android:id="@+id/textView102S"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Tarima"
            android:layout_below="@id/spinner1S"
            android:layout_toRightOf="@id/editTextUbicaS"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/editTextTarimaE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/spinner1S"
            android:layout_toRightOf="@id/textView102S"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff" />
        
        <TextView
            android:id="@+id/textView103S"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="CÃ³digo"
            android:layout_below="@id/textView102S"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextCodS"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/editTextUbicaS"
            android:layout_toRightOf="@id/textView103S"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        <ImageView
            android:src="@drawable/teclado"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/imageView111"
            android:layout_below="@id/editTextUbicaS"
            android:layout_toRightOf="@id/editTextCodS"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/textView104S"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:layout_below="@id/textView103S"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/editTextCantS"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_below="@id/editTextCodS"
            android:layout_toRightOf="@id/textView104S"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffffff" />
        <TextView
            android:id="@+id/LabelInfo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/imageView111"
            android:layout_toRightOf="@+id/editTextCantS"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayouts2">
        
        <TextView
            android:text="CODIGO = DESCRIPCION = CANTIDAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView105S"
            android:textColor="#0000FF"
            android:layout_gravity="center_horizontal"/>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:id="@+id/listViewSalidas"
            android:scrollbars="vertical"/>
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts3">
         <TextView
            android:id="@+id/textView106S"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Comentario"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editTextContenidoS"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#ff303f9f"
            android:maxLength="20"
            android:layout_below="@+id/textView106S"
            android:lines="3"
            android:textColor="#ffffffff" />
    </RelativeLayout>
     <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relativeLayouts4">
        <ImageButton
                    android:src="@drawable/btnregresar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnRegresarSalida"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp" />
        <ImageButton
                    android:src="@drawable/inventario_normal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnReportSalida"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnRegresarSalida"
                    android:layout_toRightOf="@id/imgbtnRegresarSalida"
                    android:gravity="center" />
        <ImageButton
                    android:src="@drawable/guardar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/imgbtnGuardarSalida"
                    android:scaleType="fitCenter"
                    android:background="@drawable/bckbtnrounded"
                    android:padding="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignBottom="@id/imgbtnReportSalida"
                    android:layout_toRightOf="@id/imgbtnReportSalida" />
        
     </RelativeLayout>   
</LinearLayout>

